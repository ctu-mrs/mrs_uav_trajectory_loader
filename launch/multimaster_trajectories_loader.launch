<launch>
 	
	<arg name="uav_name" default="$(optenv UAV_NAME uav)"/>
  <arg name="config" default="$(find trajectory_loader)/config/params.yaml"/>
  <arg name="trajectories_path" default="$(find trajectory_loader)"/>
  <arg name="mode" default="load"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="debug_roslaunch"/>

	<group ns="$(arg uav_name)">
	
		<node name="trajectory_loader" pkg="trajectory_loader" type="load_trajectory" output="screen" launch-prefix="$(arg launch_prefix)" >
			<param name="uav_name" type="string" value="$(arg uav_name)" />	
    
      <rosparam file="$(arg config)" />
			<param name="trajectories_path" type="string" value="$(arg trajectories_path)" />	
      <param name="mode" type="string" value="$(arg mode)" />
    
    </node>
	</group>

</launch>
