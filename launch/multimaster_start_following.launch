<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">

    <node name="trajectory_loader" pkg="trajectory_loader" type="load_trajectory" args="--call-trigger-service" output="screen" >

      <rosparam file="$(find trajectory_loader)/config/params.yaml" />
      <param name="service_topic" type="string" value="control_manager/mpc_tracker/start_trajectory_following" />

    </node>

  </group>

</launch>
